<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:text="@string/title"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:id="@+id/isDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/task_title"
            app:layout_constraintEnd_toStartOf="@+id/task_title"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:background="#FFFFFF"
            android:hint="@string/enter_title"
            android:minHeight="48dp"
            android:paddingLeft="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/priorityBtn"
            app:layout_constraintStart_toEndOf="@+id/isDone"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/priorityBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:gravity="end|center_vertical"
            android:onClick="showPriorityDialog"
            android:text="priority"
            android:textColor="#000000"
            app:layout_constraintBaseline_toBaselineOf="@+id/task_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <CheckBox
        android:id="@+id/extra_info_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="4dp"
        android:text="@string/extra_info"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/extra_infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="@string/extra_information"
        android:minHeight="48dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/start_date"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created On"
        android:textColor="#000000"
        android:visibility="gone"
        app:icon="@drawable/ic_baseline_date_range_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#000000" />

    <Button
        android:id="@+id/end_date"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textColor="#000000"
        app:icon="@drawable/ic_baseline_date_range_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#000000" />

    <Button
        android:id="@+id/delete_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="none"
        android:inputType="textCapWords"
        android:text="@string/delete_task"
        android:textColor="#000000"
        app:icon="@drawable/ic_baseline_delete_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#000000" />

</LinearLayout>